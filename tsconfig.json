{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom", "esnext"],

    "module": "es6",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "outDir": "./dist",
    "pretty": true,
    "target": "es6",
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "skipLibCheck": true,
    "strict": false,
    "suppressImplicitAnyIndexErrors": true
  },
  "lib": ["es2015"],
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "typings/*.d.ts",
    "__tests__/**/*.ts",
    "jest/server.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "temp",
    ".eslintrc.js",
    "webpack.config.js"
  ]
}
